{
	"version": "2.2.0",
	"compilerOptions": {
		"allowSyntheticDefaultImports": true,
		"baseUrl": ".",
		"declaration": true,
		"importHelpers": true,
		"experimentalDecorators": true,
		"module": "commonjs",
		"moduleResolution": "node",
		"noImplicitAny": true,
		"noImplicitThis": false,
		"noImplicitUseStrict": true,
		"noUnusedParameters": true,
		"noUnusedLocals": true,
		"outDir": "_build",
		"removeComments": false,
		"sourceMap": true,
		"strictNullChecks": false,
		"target": "es5"
	},
	"include": [
		"./src/**/*.ts"
	]
}
